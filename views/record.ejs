<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Last Inserted Record</title>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap');

    body {
      font-family: 'Roboto', sans-serif;
      background-color: #121212;
      color: #ffffff;
      margin: 20px;
    }

    h1, h2 {
      color: #00e5ff;
      text-align: center;
      margin-bottom: 20px;
    }

    .record-container {
      background: linear-gradient(135deg, #ff416c, #ff4b2b);
      border-radius: 15px;
      box-shadow: 0 8px 16px rgba(0, 0, 0, 0.6);
      padding: 20px;
      margin-top: 20px;
      transition: transform 0.4s ease, box-shadow 0.4s ease;
    }

    .record-container:hover {
      transform: scale(1.01);
      box-shadow: 0 12px 24px rgba(0, 0, 0, 0.8);
    }

    .record {
      display: flex;
      flex-wrap: wrap;
      gap: 15px;
      justify-content: center;
    }

    .record-box {
      background: #222;
      border-radius: 10px;
      border: 2px solid #00e5ff;
      padding: 10px;
      width: 150px;
      height: 150px;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      transition: transform 0.4s ease, box-shadow 0.4s ease;
      text-align: center;
    }

    .record-box:hover {
      transform: scale(1.1);
      box-shadow: 0 12px 24px rgba(0, 0, 0, 0.8);
    }

    .record-box p {
      margin: 5px 0;
    }

    .record-box p strong {
      color: #ffeb3b;
      font-size: 1.2em;
    }

    .records-table {
      margin-top: 30px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }

    table, th, td {
      border: 1px solid #2c2c2c;
    }

    th {
      background-color: #333333;
      color: #00e5ff;
      padding: 12px;
    }

    td {
      background-color: #222222;
      padding: 10px;
    }

    td, th {
      text-align: center;
    }

    tbody tr:nth-child(even) {
      background-color: #1b1b1b;
    }

    tbody tr:hover {
      background-color: #333333;
    }

    /* Scroll bar styling */
    ::-webkit-scrollbar {
      width: 8px;
    }

    ::-webkit-scrollbar-thumb {
      background: #ff416c;
      border-radius: 10px;
    }

    ::-webkit-scrollbar-thumb:hover {
      background: #ff4b2b;
    }

    ::-webkit-scrollbar-track {
      background: #121212;
    }
  </style>
  <script>
    setInterval(function() {
      window.location.reload();
    }, 10000); // 10 seconds
  </script>
</head>
<body>
  <h1>Last Inserted Record</h1>
  <% if (record) { %>
    <div class="record-container">
      <div class="record">
        <div class="record-box">
          <p><strong>ID:</strong></p>
          <p><%= record.Id %></p>
        </div>
        <div class="record-box">
          <p><strong>Temp1:</strong></p>
          <p><%= record.temp1 %></p>
        </div>
        <div class="record-box">
          <p><strong>Temp2:</strong></p>
          <p><%= record.temp2 %></p>
        </div>
        <div class="record-box">
          <p><strong>Status:</strong></p>
          <p><%= record.status %></p>
        </div>
        <div class="record-box">
          <p><strong>Alarm:</strong></p>
          <p><%= record.alarm %></p>
        </div>
        <div class="record-box">
          <p><strong>Output1:</strong></p>
          <p><%= record.output1 %></p>
        </div>
        <div class="record-box">
          <p><strong>Device ID:</strong></p>
          <p><%= record.deviceId %></p>
        </div>
        <div class="record-box">
          <p><strong>Timestamp:</strong></p>
          <p><%= record.timeStamp %></p>
        </div>
      </div>
    </div>
  <% } else { %>
    <p>No record found.</p>
  <% } %>

  <h2>Last 20 Records</h2>
  <div class="records-table">
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Temp1</th>
          <th>Temp2</th>
          <th>Status</th>
          <th>Alarm</th>
          <th>Output1</th>
          <th>Device ID</th>
          <th>Timestamp</th>
        </tr>
      </thead>
      <tbody>
        <% if (records.length > 0) { %>
          <% records.forEach(record => { %>
            <tr>
              <td><%= record.Id %></td>
              <td><%= record.temp1 %></td>
              <td><%= record.temp2 %></td>
              <td><%= record.status %></td>
              <td><%= record.alarm %></td>
              <td><%= record.output1 %></td>
              <td><%= record.deviceId %></td>
              <td><%= record.timeStamp %></td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="8">No records found.</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</body>
</html>
